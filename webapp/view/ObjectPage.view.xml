<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:u="sap.uxap"
    xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	controllerName="products.app.controller.ObjectPage">


    <u:ObjectPageLayout 
        showFooter="{EditModel>/EditMode}"
        class="sapUiNoContentPadding">
        <u:headerTitle>
            <u:ObjectPageHeader objectTitle="{= ${EditModel>/EditMode} ? ${i18n>CreateNewProductText} : ${Name}}" /> 
        </u:headerTitle>
      
        <u:headerContent >
            
            <VBox visible="{= !${EditModel>/EditMode}}">
				<ObjectStatus title="{i18n>DescriptionText}" text="{Description}" />
				<ObjectStatus 
                    title="{i18n>PriceText}" 
                    text="{
                        parts: [
                            'i18n>PriceAndCurrencyText',
                            'Price',
                            'Currency'
                        ],
                        formatter: '.formatMessage'
                    }" 
                />
				<ObjectStatus title="{i18n>QuantityText}" text="{Quantity}" />
			</VBox>
            
            
            <ObjectStatus 
                visible="{= !${EditModel>/EditMode}}"
                title="{i18n>CategoryText}" 
                text="{
                    path: 'Category',
                    formatter: '.getCategoriesName'
                }"
            />
            <ObjectStatus 
                visible="{= !${EditModel>/EditMode}}"
                title="{i18n>AvailabilityText}" 
                text="{
                    parts: [
                        'i18n>PriceAndCurrencyText',
                        'Price',
                        'Currency'
                    ],
                    formatter: '.formatMessage'
                }"
            />
            <ObjectStatus 
                visible="{= !${EditModel>/EditMode}}"
                title="{i18n>CreatedAtText}" 
                text="{
                    path: 'CreatedAt',
                    type: 'sap.ui.model.type.Date',
                    formatOptions: {
                        source: {
                            pattern: 'yyyy-MM-ddTHH:mm:ss'
                        }
                    }
                }"/>
            <ObjectStatus 
                visible="{= !${EditModel>/EditMode}}"
                title="{i18n>UpdatedAtText}" 
                text="{
                    path: 'UpdatedAt',
                    type: 'sap.ui.model.type.Date',
                    formatOptions: {
                        source: {
                            pattern: 'yyyy-MM-ddTHH:mm:ss'
                        }
                    }
                }"
            />         
        </u:headerContent>
        <u:sections>
          <u:ObjectPageSection 
                showTitle="{= !${EditModel>/EditMode}}"
                title="{i18n>GeneralInformationText}" 
                titleUppercase="false" 
                class="sapUiResponsiveContentPadding">
                <u:subSections>
                    <u:ObjectPageSubSection>
                        <form:SimpleForm 
                            visible="{= !${EditModel>/EditMode}}"
                            editable="false"
                            
                            layout="ResponsiveGridLayout"
                            title="{= ${EditModel>/EditMode} ? ${i18n>EnterDataText} : ${i18n>GeneralInformationText}}"                
                            singleContainerFullSize="false">
                            <form:content >   
                                <core:Title text="{i18n>ProductInformationText}" />
                                <VBox >
                                    <ObjectStatus title="{i18n>ProductNameText}" text="{Name}" class="sapUiTinyMarginBottom"/>   
                                    <ObjectStatus title="{i18n>DescriptionText}" text="{Description}" class="sapUiTinyMarginBottom"/>  
                                    <ObjectStatus 
                                        title="{i18n>CreatedAtText}" 
                                        text="{
                                            path: 'CreatedAt',
                                            type: 'sap.ui.model.type.Date',
                                            formatOptions: {
                                                source: {
                                                    pattern: 'yyyy-MM-ddTHH:mm:ss'
                                                }
                                            }
                                        }"
                                        class="sapUiTinyMarginBottom"
                                    />  
                                    <ObjectStatus 
                                        title="{i18n>UpdatedAtText}" 
                                        text="{
                                            path: 'UpdatedAt',
                                            type: 'sap.ui.model.type.Date',
                                            formatOptions: {
                                                source: {
                                                    pattern: 'yyyy-MM-ddTHH:mm:ss'
                                                }
                                            }
                                        }" 
                                        class="sapUiTinyMarginBottom"
                                    />  
                                </VBox>
                                
                                <core:Title text="{i18n>ProductDetailsText}" />
                                <VBox >
                                    <ObjectStatus 
                                        title="{i18n>PriceText}" 
                                        text="{
                                            parts: [
                                                'i18n>PriceAndCurrencyText',
                                                'Price',
                                                'Currency'
                                            ],
                                            formatter: '.formatMessage'
                                        }" 
                                        class="sapUiTinyMarginBottom"
                                    />   
                                    <ObjectStatus title="{i18n>QuantityText}" text="{Quantity}" class="sapUiTinyMarginBottom"/>                       
                                </VBox>                           
                            </form:content>
                        </form:SimpleForm>
                        <form:SimpleForm 
                            visible="{= ${EditModel>/EditMode}}"
                            editable="true"
                            layout="ResponsiveGridLayout"
                            validateFieldGroup="onValidateFieldGroup"
                            title="{= ${EditModel>/EditMode} ? ${i18n>EnterDataText} : ${i18n>GeneralInformationText}}"                
                            singleContainerFullSize="false">
                            <form:content>
                                
                                <Label text="{i18n>ProductNameText}" labelFor="idNameInput" />
                                <Input 
                                    required="true"
                                    fieldGroupIds="valid"
                                    id="idNameInput"    
                                    value="{
                                        path: 'FormModel>/Name',
                                        type: 'sap.ui.model.type.String',
                                        constraints: {
                                            minLength: 1
                                        }
                                    }" 
                                    
                                />   

                                <Label text="{i18n>DescriptionText}" labelFor="idDescriptionInput" />
                                <Input value="{FormModel>/Description}" id="idDescriptionInput" />

                                <Label text="{i18n>PriceText}" labelFor="idPriceInput" />
                                <Input value="{FormModel>/Price}" id="idPriceInput" />

                                <Label text="{i18n>QuantityText}" labelFor="idQuantityInput" />
                                <Input value="{FormModel>/Quantity}" id="idQuantityInput" />
            
                                <Label text="{i18n>CategoryText}" labelFor="idCategoriesSelect" />
                                <Select 
                                    items="{/Categories}" 
                                    id="idCategoriesSelect"
                                >
                                    <core:Item key="{Id}" text="{Name}" />
                                </Select>

                                <Label text="{i18n>AvailabilityText}" labelFor="idAvailabilitySelect" />
                                <Select 
                                    items="{AvailabilityModel>/Availability}" 
                                    selectedKey="{AvailabilityModel>/SelectedKey}"
                                    id="idAvailabilitySelect"
                                >
                                    <core:Item key="{AvailabilityModel>key}" text="{AvailabilityModel>value}" />
                                </Select>

                                <Label text="{i18n>SupplierText}" labelFor="idSuppliersMultiComboBox" />
                                <MultiComboBox
                                    items="{/Suppliers}"
                                    id="idSuppliersMultiComboBox"
                                    selectedKeys="{FormModel>/Suppliers}"
                                >
                                    <core:Item key="{SupplierId}" text="{SuppliersName}" />
                                </MultiComboBox>

                                <Label text="{i18n>CurrencyText}" labelFor="idCurrencyInput" />
                                <Input value="{FormModel>/Currency}" id="idCurrencyInput" />
                                
                            </form:content>
                        </form:SimpleForm>
                    </u:ObjectPageSubSection>
                  </u:subSections>
            </u:ObjectPageSection>

            <u:ObjectPageSection 
                visible="{= !${EditModel>/EditMode}}"
                title="{
                    parts: [
                        'i18n>SuppliersInfotext',
                        'i18n>SupplierText',
                        'i18n>InfoText'
                    ],
                    formatter: '.formatMessage'
                }" 
                titleUppercase="false" 
                class="sapUiResponsiveContentPadding">
                <u:subSections>
                    <u:ObjectPageSubSection>
                        <Table id="idSuppliersTable"
                            sticky="HeaderToolbar,ColumnHeaders"
                            items="{Suppliers}"
                            class="sapUiSmallNegativeMarginBeginEnd"
                            width="auto">
                            <headerToolbar>
                                <Toolbar>
                                    <Label text="{i18n>SupplierText}"></Label>
                                </Toolbar>
                            </headerToolbar>
                            <columns>
                                <Column width="12em">
                                    <Text text="{i18n>ProductNameText}" />
                                </Column>
                                <Column minScreenWidth="Tablet" demandPopin="true">
                                    <Text text="{i18n>AddressText}" />
                                </Column>
                                
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>                                        
                                        <Text text="{
                                            path: '',
                                            formatter: '.getSuppliersName'
                                            }" 
                                        />
                                        <Text text="{
                                            path: '',
                                            formatter: '.getSuppliersAddress'
                                            }" 
                                        />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </u:ObjectPageSubSection>
                  </u:subSections>
            </u:ObjectPageSection>
            
        </u:sections>

        <u:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button text="Create" press="onCreateProductPress" type="Emphasized"/>
                <Button text="Cancel" press="onCancelButtonPress"/>
                
            </OverflowToolbar>
        </u:footer>
        
    </u:ObjectPageLayout>



</mvc:View>